  issn            = {1553-877X},
  journal         = {IEEE Communications Surveys {\&} Tutorials},
  keywords        = {Device free localization (DFL),fingerprinting,radar,scattering,smart world,tomography},
  mendeley-groups = {thesis resource},
  number          = {4},
  pages           = {3532--3564},
