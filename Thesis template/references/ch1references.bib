  journal         = {IEEE Communications Surveys and Tutorials},
  keywords        = {Internet of Things (IoT),LMFF,MDS,RBFM,SDP,Wireless sensor network (WSN),finger-printing,localization},
  mendeley-groups = {thesis resource},
  number          = {3},
  pages           = {2028--2061},
